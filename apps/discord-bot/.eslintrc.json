{
	"extends": [
		"plugin:@typescript-eslint/recommended",
		"eslint:recommended",
		"prettier"
	],
	"rules": {
		// https://github.com/typescript-eslint/typescript-eslint/issues/2621#issuecomment-701970389
		"no-unused-vars": "off",
		"@typescript-eslint/no-unused-vars": "error"
	},
	"env": {
		"node": true,
		"es2022": true,
		"commonjs": true
	},
	"parserOptions": {
		"ecmaVersion": 2019,
		"project": ["./tsconfig.json"]
	}
}
